# ReCodEx SIS extension web-app systemd configuration file
#
# This file should be placed in /lib/systemd/system/ directory

[Unit]
Description=ReCodEx SIS Extension Web App
Documentation=
DefaultDependencies=true

[Service]
Type=simple
StandardInput=null
StandardOutput=null
StandardError=journal
User=recodex
Group=recodex
WorkingDirectory=/opt/recodex/SIS-ext-webapp
ExecStart=/usr/bin/node /opt/recodex/SIS-ext-webapp/bin/server.mjs
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
